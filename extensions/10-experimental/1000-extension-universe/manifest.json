{
  "manifest_version": 3,
  "name": "Extension Universe",
  "version": "1.0.0",
  "description": "The ultimate integration platform for managing all 1000 extensions in this project, providing a complete ecosystem experience.",
  "permissions": [
    "storage",
    "management",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
