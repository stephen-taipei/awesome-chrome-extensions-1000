{
  "manifest_version": 3,
  "name": "Reading Mode",
  "version": "1.0.0",
  "description": "Transform cluttered pages into clean, distraction-free reading experiences.",
  "permissions": [
    "activeTab",
    "storage",
    "tts"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
