{
  "manifest_version": 3,
  "name": "Annotation Tool",
  "version": "1.0.0",
  "description": "Draw, annotate, and mark up any webpage. Add notes, arrows, shapes, and freehand drawings.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Annotation Tool"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
