{
  "manifest_version": 3,
  "name": "Outline Notes",
  "version": "1.0.0",
  "description": "Hierarchical outliner for structured note-taking. Infinite nesting, drag-drop, and keyboard navigation.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Outline Notes"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
