{
  "manifest_version": 3,
  "name": "Water Reminder",
  "version": "1.0.0",
  "description": "Stay hydrated with regular water drinking reminders and daily intake tracking",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_title": "Water Reminder",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
