{
  "manifest_version": 3,
  "name": "Tab Groups",
  "version": "1.0.0",
  "description": "Organize your tabs into color-coded groups. Quickly group tabs by domain or create custom groups.",
  "permissions": ["storage", "tabs", "tabGroups"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
