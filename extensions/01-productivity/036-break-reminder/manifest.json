{
  "manifest_version": 3,
  "name": "Break Reminder",
  "version": "1.0.0",
  "description": "Remind yourself to take breaks. 20-20-20 eye care rule, stretch reminders, and customizable intervals.",
  "permissions": ["storage", "alarms", "notifications", "idle"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
