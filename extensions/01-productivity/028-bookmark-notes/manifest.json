{
  "manifest_version": 3,
  "name": "Bookmark Notes",
  "version": "1.0.0",
  "description": "Add notes, tags, and ratings to your bookmarks. Search bookmarks with their notes.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Bookmark Notes"
  },
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
