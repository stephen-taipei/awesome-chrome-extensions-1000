{
  "manifest_version": 3,
  "name": "Workspace Manager",
  "version": "1.0.0",
  "description": "Create and switch between different workspaces. Each workspace has its own set of tabs and window layout.",
  "permissions": ["storage", "tabs", "windows"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
