{
  "manifest_version": 3,
  "name": "Mind Map Note",
  "version": "1.0.0",
  "description": "Visual mind mapping tool. Create, connect, and organize ideas with an intuitive interface.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Mind Map Note"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
