{
  "manifest_version": 3,
  "name": "Daily Journal",
  "version": "1.0.0",
  "description": "Daily journaling with mood tracking, tags, and calendar view. Build a habit of reflection.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Daily Journal"
  },
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
