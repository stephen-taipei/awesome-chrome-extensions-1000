{
  "manifest_version": 3,
  "name": "Tab Manager Pro",
  "version": "1.0.0",
  "description": "全功能標籤管理器 - 搜尋、排序、群組、快速切換標籤。支援鍵盤快捷鍵與拖拽排序。",
  "author": "Awesome Chrome Extensions 1000",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Tab Manager Pro"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "開啟 Tab Manager Pro"
    }
  },
  "minimum_chrome_version": "116"
}
