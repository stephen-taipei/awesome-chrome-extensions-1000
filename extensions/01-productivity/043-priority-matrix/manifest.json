{
  "manifest_version": 3,
  "name": "Priority Matrix",
  "version": "1.0.0",
  "description": "Eisenhower Matrix for prioritizing tasks by urgency and importance. Organize your work into Do, Schedule, Delegate, and Delete quadrants.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
